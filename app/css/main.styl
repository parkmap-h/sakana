body
  margin 0

button
  min-height 65px
  min-width 60px
  display inline-block
  -webkit-appearance: none
  background #fafafa
  border 1px solid #ddd
  border-radius:3px
  cursor pointer
  font-size 16px
  &:hover{
    background #fff
  }
  @media (min-width: 0) and (max-width: 768px) {
    font-size 10px
    min-height 45px
  }

p
  margin 6px 4px 0 4px

.app > header
  height 38px
  display flex
  justify-content space-around
  h1
    font-size 14px

.app > footer
  margin 10px 0 0 0
  height 100px
  display flex
  background-color #000
  align-items flex-end
  justify-content flex-end
  padding 0 10px 10px 0

  a
    color #aaa

.spaceRegister
  margin 10px
  display flex
  justify-content space-around
  align-items center

  button
    flex 1
    margin 0 4px 0 4px

.tool
  margin 10px 14px
  text-align center
  button
    width 100%

.sapce
  margin 10px 4px 0 4px

.warn
  margin 4px
  padding 10px
  border 1px #f33 solid
  background-color #ffeeee
  color #f33
